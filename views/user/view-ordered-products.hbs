<section>
    <div class="container mt-4">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Order Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each orderedProducts}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td><img style="width: 50px; height: 60px;" src="/product-images/{{this.product._id}}.jpg" alt="Img"></td>
                    <td>{{this.product.name}}</td>
                    <td>{{this.quantity}}</td>
                    <td>{{this.orderStatus}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>