<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success col-md-2 ms-auto">Add Product</a>
        </div>
    </div>
    <div class="container mt-4">
        <table class="table display" id="all-products">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td><img style="width: 50px; height: 60px;" src="/product-images/{{this._id}}.jpg" alt="Img"></td>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.price}}</td>
                    <td>
                        <a href="/admin/edit-product?id={{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you sure to delete {{this.name}}')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>


<script>
    $(document).ready(function () {
        $('#all-products').DataTable({
            lengthChange: false
        });
    });
</script>